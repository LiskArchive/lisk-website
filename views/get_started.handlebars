        <div class="abs_container">
            <div class="gl_table_cell">
                <div class="section_inner">
                    <h1 class="hero_title">Get started with Lisk</h1>
                    <div class="hero_text">Here are some useful tips to get you started</div>
                </div>
            </div>
        </div>
        {{> menu }}
    </div>
